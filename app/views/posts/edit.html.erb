
<h1>Editing post </h1>
<% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
  
  <% if @post.new_record? %>
    <%= form_with(model: [@project, @post]) do |form| %>
      <div>
        <%= form.text_field :title %>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.hidden_field :project_id, value: params[:id] %>
        <%= form.submit "Create Thread" %>
      </div>
    <% end %>
  <% else %>
    <%= form_with(model: [@project, @post], method: :patch) do |form| %>
      <div>
        <%= form.text_field :title %>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.submit "Update Thread" %>
      </div>
    <% end %>
  <% end %>
  